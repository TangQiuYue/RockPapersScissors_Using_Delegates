<Window x:Class="RockPapersScissors.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RockPapersScissors"
        mc:Ignorable="d"
        Title="Rock Paper Scissors" Height="500" Width="600">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Images/RockPaperScissors.png" Stretch="UniformToFill" Opacity="0.25"/>
        </Grid.Background>
        <TextBlock x:Name="welcomeTB" HorizontalAlignment="Left" Margin="131,30,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Trebuchet MS" FontWeight="Bold" FontSize="18" Height="85" Width="299" TextAlignment="Center"><Run Text="Welcome to "/><LineBreak/><Run Text="Rock Paper Scissors!"/><LineBreak/><Run Text="Who is playing today?"/></TextBlock>
        <Button x:Name="goBtn" Content="Go!" HorizontalAlignment="Left" Margin="269,240,0,0" VerticalAlignment="Top" Width="75" Click="goBtn_Click"/>
        <ComboBox x:Name="comboBoxOne" HorizontalAlignment="Left" Margin="83,184,0,0" VerticalAlignment="Top" Width="193" Height="34"/>
        <ComboBox x:Name="comboBoxTwo" HorizontalAlignment="Left" Margin="336,184,0,0" VerticalAlignment="Top" Width="193" Height="34"/>
    </Grid>
</Window>
